{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["es6", "ES2019", "DOM", "dom.iterable"],                     
    "allowJs": true,      
    "outDir": "./dist", 
    "rootDir": "./src",
    "removeComments": true, 
    "strict": true, 
    "noImplicitAny": true, 
    "noEmitOnError": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "env.ts",
  ]
}